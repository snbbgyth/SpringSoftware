@using SpringSoftware.Web.Help
@model IEnumerable<SpringSoftware.Core.DbModel.Comment>

@{
    ViewBag.Title = "留言列表";
}

<h2>所有留言</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LastModifyDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Creater)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModifier)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
           @Html.Raw(item.Content.StripTagsRegex().ToSummary())
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.LastModifyDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creater)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastModifier)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |@Html.ActionLink("祥细", "Details", new { id=item.Id }) |@Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
